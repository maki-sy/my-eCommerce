@model List<eStoreAPI.DTO.FullOrderDTO>

<div>
    <h4>Orders</h4>
    <hr />
    @foreach (var order in Model)
    {
        <div class="order-item">
            <h5>Product</h5>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => order.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => order.ProductName)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    <img src="data:image/png;base64,@Convert.ToBase64String(order.ImageData)"
                         alt="Product Image"
                         style="max-width: 100px; max-height: 100px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => order.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => order.Quantity)
                </dd>
            </dl>
            <hr />
        </div>
    }
</div>
